# Google AI API Key for Gemini models
GOOGLE_API_KEY=your_google_api_key_here

# Opik Observability Configuration (Comet.com)
# Get your API key from: https://www.comet.com/signup
OPIK_API_KEY=your_opik_api_key_here
OPIK_WORKSPACE=your_workspace_name
OPIK_PROJECT_NAME=kanso-ai

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Model Configuration (optional overrides)
DEFAULT_MODEL=gemini-2.5-flash
PRO_MODEL=gemini-2.5-pro
# Logging Configuration
# Environment: development | staging | production
ENVIRONMENT=development

# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# Enable file logging (writes to ./logs directory with rotation)
ENABLE_FILE_LOGGING=false

# Maximum log file size before rotation (in bytes, default 10MB)
LOG_MAX_BYTES=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5